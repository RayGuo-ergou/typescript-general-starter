{
  "name": "typescript-general-starter",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.10.0",
  "description": "General purpose typescript starter",
  "author": {
    "name": "Ray Guo",
    "email": "ma2808203259@hotmail.com"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "starter"
  ],
  "main": "src/index.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --dts",
    "dev": "tsx watch ./src/index.ts",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "postinstall": "husky || true"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@ergou_rrrr/eslint-config": "^1.0.19",
    "@types/node": "^22.5.4",
    "eslint": "^9.10.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "tsup": "^8.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,html}": [
      "pnpm lint:fix"
    ]
  }
}
