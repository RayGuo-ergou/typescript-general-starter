{
  "name": "typescript-general-starter",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.17.1",
  "description": "General purpose typescript starter",
  "author": {
    "name": "Ray Guo",
    "email": "ma2808203259@hotmail.com"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "starter"
  ],
  "main": "src/index.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --dts",
    "dev": "tsx watch --env-file=.env ./src/index.ts",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "postinstall": "husky || true"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@ergou_rrrr/eslint-config": "^1.1.1",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,html}": [
      "pnpm lint:fix"
    ]
  }
}
