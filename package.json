{
  "name": "typescript-general-starter",
  "type": "module",
  "version": "0.0.1",
  "description": "General purpose typescript starter",
  "author": {
    "name": "Ray Guo",
    "email": "ma2808203259@hotmail.com"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "starter"
  ],
  "main": "src/index.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --dts",
    "dev": "tsx watch ./src/index.ts",
    "test": "vitest",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "postinstall": "husky || true"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@ergou_rrrr/eslint-config": "^1.0.12",
    "@types/node": "^20.12.4",
    "eslint": "9.0.0-rc.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,html}": [
      "pnpm lint:fix"
    ]
  }
}
