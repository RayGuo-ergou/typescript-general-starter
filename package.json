{
  "name": "typescript-general-starter",
  "type": "module",
  "version": "0.0.1",
  "description": "General purpose typescript starter",
  "author": {
    "name": "Ray Guo",
    "email": "ma2808203259@hotmail.com"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "starter"
  ],
  "main": "src/index.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --dts",
    "dev": "tsx watch ./src/index.ts",
    "test": "vitest",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@ergou_rrrr/eslint-config": "^1.0.2",
    "@types/node": "^20.10.7",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,html}": [
      "pnpm lint:fix"
    ]
  }
}
